<div class="col-md-4 portfolio-item" data-id="<%= portfolio_item.id %>">
  <div class="card mb-4 box-shadow">
    <%= image_tag portfolio_item.thumb_image, class: "card-text", width: "100%" %>
    <div class="card-body">
      <p class="card-text">
        <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span>
        <%= portfolio_item.subtitle %>
        </p>
      <div class="d-flex justify-content-between align-items-center">
      </div>
    </div>
  </div>
</div>
