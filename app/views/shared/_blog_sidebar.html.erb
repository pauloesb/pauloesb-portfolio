<div class="col-sm-3 blog-sidebar">
  <%= new_post_btn %>
  <br>
  <div class="sidebar-module sidebar-module-inset">
    <h4>About</h4>
    <p>My name is Paulo Borba, and this is my personal blog, where I post some tech tips, some personal/professional histories and the development of my personal projects.</p>
  </div>
  <div class="sidebar-module">
    <h4>Blog's Topics</h4>
    <%= render partial: "topics/topic", collection: @topics %>
  </div>
  <div class="sidebar-module">
    <h4>Social Media</h4>
    <br>
    <div class="row">
      <div class="col-md-12 side-icon">
        <%= link_to "https://twitter.com/pauloesb_", target: "_blank" do %>
          <span class="fa-stack fa-lg">
            <i class="fa fa-circle fa-stack-2x"></i>
            <i class="fa fa-twitter fa-stack-1x fa-inverse"></i>
          </span>
        <% end %>
      </div>
      <div class="col-md-12 side-icon">
        <%= link_to "https://www.facebook.com/pauloesb", target: "_blank" do %>
          <span class="fa-stack fa-lg">
            <i class="fa fa-circle fa-stack-2x"></i>
            <i class="fa fa-facebook fa-stack-1x fa-inverse"></i>
          </span>
        <% end %>
      </div>
      <div class="col-md-12 side-icon">
        <%= link_to "https://www.linkedin.com/in/paulo-eduardo-souza-borba-1aa0b8b0", target: "_blank" do %>
          <span class="fa-stack fa-lg">
            <i class="fa fa-circle fa-stack-2x"></i>
            <i class="fa fa-linkedin fa-stack-1x fa-inverse"></i>
          </span>
        <% end %>
      </div>
      <div class="col-md-12 side-icon">
        <%= link_to "https://github.com/pauloesb", target: "_blank" do %>
          <span class="fa-stack fa-lg">
            <i class="fa fa-circle fa-stack-2x"></i>
            <i class="fa fa-github fa-stack-1x fa-inverse"></i>
          </span>
        <% end %>
      </div>
    </div>
  </div>
</div><!-- /.blog-sidebar -->
