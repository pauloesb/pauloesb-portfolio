<%= form_for(blog) do |f| %>
  <div class="form-group">
    <h5><%= f.label :title %></h5>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <h5><%= f.label :body %></h5>
    <%= f.text_area :body, class: "form-control", rows: 12 %>
  </div>

  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
