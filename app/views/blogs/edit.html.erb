<%= render "shared/blog_masthead",
  head: "site-heading",
  title: "Editing Blog",
  subtitle: @blog.title %>

<article>
  <div class="container">
    <div class="row">
      <div class="col-lg-5 col-md-10 mx-auto">
        <%= render 'form', blog: @blog %>
        <span class="breadcrumb">
          <h6 class="breadcrumb-item"><%= blog_back_btn %></h6>
          <h6 class="breadcrumb-item"><%= blog_show_btn @blog %></h6>
        </span>
      </div>
      <%= render "shared/blog_sidebar" %>
    </div>
  </div>
</article>

<hr>
